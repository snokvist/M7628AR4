// M7628AR4 (MT7628AN 2.4 GHz + MT7663E PCIe 5 GHz)

#include "mt7628an.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "custom,m7628ar4", "mediatek,mt7628an-soc";
	model = "Custom M7628AR4 (MT7628AN + MT7663E)";

	aliases {
		label-mac-device = &ethernet;
	};

	chosen {
		bootargs = "console=ttyS1,57600";
	};
};

/* 16 MiB SPI-NOR layout:
 * 0x000000..0x030000 : Bootloader (192 KiB)
 * 0x030000..0x040000 : Config     (64 KiB)
 * 0x040000..0x050000 : Factory    (64 KiB)
 * 0x050000..0x1000000: firmware   (rest)
 */
&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells   = <1>;

			uboot: partition@0 {
				label = "Bootloader";
				reg = <0x000000 0x030000>;
				read-only;
			};

			config: partition@30000 {
				label = "Config";
				reg = <0x030000 0x010000>;
				read-only;
			};

			factory: partition@40000 {
				label = "Factory";
				reg = <0x040000 0x010000>;
				read-only;
			};

			firmware: partition@50000 {
				label = "firmware";
				reg = <0x050000 0xFB0000>;
			};
		};
	};
};

/* Ethernet gets its MAC from Factory@0x28 (matches your board.json) */
&ethernet {
	status = "okay";
	mtd-mac-address = <&factory 0x28>;
};

/* Internal 2.4 GHz (SoC) â€” EEPROM at Factory@0x0 */
&wmac {
	status = "okay";
	mediatek,mtd-eeprom = <&factory 0x0>;
};

/* PCIe root (your runtime path is pcie@10140000) */
&pcie {
	status = "okay";

	/* MT7663E over PCIe handled by mt7615e driver */
	wifi@0,0 {
		compatible = "mediatek,mt7615e";
		reg = <0x0000 0 0 0 0>;

		/* Cal/EEPROM for the PCIe card lives at Factory@0x8000 */
		mediatek,mtd-eeprom = <&factory 0x8000>;

		/* 5 GHz MAC at Factory@0x8004 */
		mtd-mac-address = <&factory 0x8004>;
	};
};
